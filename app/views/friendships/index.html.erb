<div class="friendships-main-container">
  <div class="pending-friendships-container">
    <h2 class="pending-title">Pending Requests</h2>
    <% if !no_requests %>
      <%= render 'layouts/invited_requests'%>
      <%= render 'layouts/pending_requests' %>
    <% else %>
      <h4>No new requests right now! Find new friends to in <strong>Suggested Friends</strong> below</h4>
    <% end %>
  </div>
  <div class="suggested-friendships-container">
    <h2 class="suggested-title">Suggested Friends</h2>
    <%= render 'layouts/suggested_friends' %>
  </div>
</div>
