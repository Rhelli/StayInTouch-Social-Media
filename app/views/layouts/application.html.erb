<!DOCTYPE html>
<html>
  <head>
    <title>StayInTouch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </script>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <div class="main-flex">
      <% unless current_user.nil? %>
        <main class="main">
          <%= yield %>
        </main>
      <% else %>
        <main class="main-signin">
          <%= yield %>
        </main>
      <% end %>
    </div>
    <footer>
    </footer>
  </body>
</html>
